<Window x:Class="ActivityMonitor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActivityMonitor"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="624">
    <Grid>
        <DataGrid x:Name="ProcessDataGrid" Margin="10,10,90,10" Loaded="ProcessDataGrid_Loaded"/>
        <Button x:Name="BtnRefresh" Content="Refresh" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" Click="BtnRefresh_Click"/>
    </Grid>
</Window>
